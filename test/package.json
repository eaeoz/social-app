{
  "name": "blog-articles-manager",
  "version": "1.0.0",
  "description": "Standalone Blog Articles Manager for Appwrite",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win portable",
    "build-all": "electron-builder --win --mac --linux",
    "pack": "electron-packager . BlogManager --platform=win32 --arch=x64 --out=dist --overwrite --icon=blog-icon"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "bestzip": "^2.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.blogmanager.app",
    "productName": "Blog Articles Manager",
    "directories": {
      "output": "dist",
      "buildResources": "."
    },
    "files": [
      "blog-articles-standalone.html",
      "electron-main.js",
      "blog-icon.png"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "blog-icon.png",
      "sign": null,
      "signDlls": false
    },
    "portable": {
      "artifactName": "Blog-Articles-Manager-Portable.exe"
    },
    "forceCodeSigning": false,
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "compression": "normal",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  }
}
