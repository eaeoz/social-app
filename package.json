    "type": "git",
    "url": "git+https://github.com/eaeoz/social-app.git"
  },
  "keywords": [
    "chat",
    "websocket",
    "mongodb",
    "real-time",
    "social"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eaeoz/social-app/issues"
  },
  "homepage": "https://github.com/eaeoz/social-app#readme",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "mongodb": "^6.3.0",
    "dotenv": "^16.3.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
